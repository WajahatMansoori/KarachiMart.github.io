@model IEnumerable<WebApplication8.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBEnd.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.P_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Cat_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.P_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.P_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.P_Quantity)
        </td>
        <td>
            @*<img src="~/@item.P_Image/@Html.DisplayFor(modelItem => item.P_Image)" style="width:130px; height:120px;" />*@
            @*<img style="width:130px; height:120px;" src="~/@item.P_Image" />*@
            @*@Html.DisplayFor(modelItem => item.P_Image)*@

            <img src="@Url.Content(item.P_Image)" width="120" height="120" />
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Cat_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.P_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.P_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.P_Id })
        </td>
    </tr>
}

</table>
